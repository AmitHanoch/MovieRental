<link rel="stylesheet" href="~/css/Customer.css" />
@using Microsoft.AspNetCore.Http;
@model MovieRental.Models.Customer

@{
    int? loggedInUserRoleId = Context.Session.GetInt32("LoggedIn");
    if (!loggedInUserRoleId.HasValue
        || loggedInUserRoleId != (int)MovieRental.General.Roles.MANAGER)
    {
        Context.Response.Redirect("/Customers/Login");
    }
}

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="fade-in-animation">
        <div class="card customer-card" id="delete-customer-card">
            <div class="card-title">
                <h3>Delete @Model.FirstName @Model.FamilyName?</h3>
            </div>
            <div class="card-content">
                <section id="details-columns-container" class="row">
                    <div id="details-title-column">
                        <span class="column-text">@Html.DisplayNameFor(model => model.PersonalId): </span>
                        <span class="column-text">@Html.DisplayNameFor(model => model.FirstName): </span>
                        <span class="column-text">@Html.DisplayNameFor(model => model.FamilyName): </span>
                        <span class="column-text">@Html.DisplayNameFor(model => model.Email): </span>
                        <span class="column-text">@Html.DisplayNameFor(model => model.PhoneNumber): </span>
                        <span class="column-text">@Html.DisplayNameFor(model => model.Address): </span>
                        <span class="column-text">@Html.DisplayNameFor(model => model.Gender): </span>
                        <span class="column-text">@Html.DisplayNameFor(model => model.Birthday): </span>
                    </div>

                    <div id="details-values-column">
                        <span class="column-text">@Html.DisplayFor(model => model.PersonalId)</span>
                        <span class="column-text">@Html.DisplayFor(model => model.FirstName) </span>
                        <span class="column-text">@Html.DisplayFor(model => model.FamilyName) </span>
                        <span class="column-text">@Html.DisplayFor(model => model.Email) </span>
                        <span class="column-text">@Html.DisplayFor(model => model.PhoneNumber) </span>
                        <span class="column-text">@Html.DisplayFor(model => model.Address) </span>
                        <span class="column-text">@Html.DisplayFor(model => model.Gender) </span>
                        <span class="column-text">@Html.DisplayFor(model => model.Birthday) </span>
                    </div>
                </section>

                <input id="delete-button" type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </section>
}